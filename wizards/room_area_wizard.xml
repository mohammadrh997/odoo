<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="room_area_wizard" model="ir.ui.view">
            <field name="name">room.area.wizard</field>
            <field name="model">room.area</field>
            <field name="arch" type="xml">
                <form string="Calculate Area">
                    <sheet>
                        <group>
                            <group>
                                <field name="length"/>
                                <field name="width"/>
                            </group>
                            <group>
                                <field name="area"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="confirm" type="object"/>
                         <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>